
@{
    ViewBag.Title = "UpdateInvoice";
    Layout = "~/Areas/Admin/Views/Shared/Partial/AdminLayoutPage.cshtml";
}

@model InvoicePayment.Areas.Admin.Models.VM.InvoiceVM

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/AddInvoice">Add Invoice</a></li>
        <li><a href="/Admin/AppUser/InvoiceList">Invoice List</a></li>
        <li class="active">Update Invoice</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Invoice</h3>
                </div>
                <form action="/Admin/Invoice/UpdateInvoice" enctype="multipart/form-data" method="post" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Invoice Name</label>
                            <input type="text" value="@Model.Invoice.InvoiceName" name="InvoiceName" class="form-control" placeholder="Invoice Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Invoice Date</label>
                            <input type="text" value="@Model.Invoice.InvoiceDate" name="InvoiceDate" class="form-control" placeholder="Invoice Date">
                        </div>
                        
                      
                        <div class="form-group">
                            <label for="AppUserID">Choose App User</label>
                            <select name="AppUserID" class="form-control">
                                @foreach (var item in Model.AppUsers)
                                {
                                    <option value="@item.ID">@item.UserName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.Invoice.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

