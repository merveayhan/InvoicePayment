
@{
    ViewBag.Title = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/Partial/AdminLayoutPage.cshtml";
}

@model InvoicePayment.Areas.Admin.Models.DTO.AppUserDTO
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/UserList">User List</a></li>
        <li class="active">Add User</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add User</h3>
                </div>
                <form action="/Admin/AppUser/UpdateUser" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="FirstName">First Name</label>
                            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last Name</label>
                            <input type="text" name="LastName" value="@Model.LastName" class="form-control" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label for="UserName">User Name</label>
                            <input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="User Name">
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="text" name="Password" value="@Model.Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="Phone">Phone</label>
                            <input type="text" name="Phone" value="@Model.Phone" class="form-control" placeholder="Phone">
                        </div>

                        <div class="form-group">
                            <label for="Role">Role</label>
                            <select name="Role" value="@Model.Role" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(InvoicePayment.Model.Enum.Role)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>

                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



