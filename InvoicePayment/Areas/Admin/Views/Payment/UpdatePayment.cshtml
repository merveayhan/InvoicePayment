
@{
    ViewBag.Title = "UpdatePayment";
    Layout = "~/Areas/Admin/Views/Shared/Partial/AdminLayoutPage.cshtml";
}

@model InvoicePayment.Areas.Admin.Models.VM.PaymentVM

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/AddPayment">Add Payment</a></li>
        <li><a href="/Admin/AppUser/PaymentList">Payment List</a></li>
        <li class="active">Update Payment</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Payment</h3>
                </div>
                <form action="/Admin/Payment/UpdatePayment" enctype="multipart/form-data" method="post" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="InvoiceType">Invoice Type</label>
                            <select name="InvoiceType" value="@Model.Payment.InvoiceType" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(InvoicePayment.Model.Enum.InvoiceType)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="text">Identification Number</label>
                            <input type="text" value="@Model.Payment.IdentificationNumber" name="IdentificationNumber" class="form-control" placeholder="Identification Number">
                        </div>
                        <div class="form-group">
                            <label for="text">Invoice Number</label>
                            <input type="text" value="@Model.Payment.InvoiceNumber" name="InvoiceNumber" class="form-control" placeholder="Invoice Number">
                        </div>
                        <div class="form-group">
                            <label for="text">First Name</label>
                            <input type="text" value="@Model.Payment.FirstName" name="FirstName" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Last Name</label>
                            <input type="text" value="@Model.Payment.LastName" name="LastName" class="form-control" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Invoice Amount</label>
                            <input type="text" value="@Model.Payment.InvoiceAmount" name="InvoiceAmount" class="form-control" placeholder="Invoice Amount">
                        </div>

                        <div class="form-group">
                            <label for="AppUserID">Choose App User</label>
                            <select name="AppUserID" class="form-control">
                                @foreach (var item in Model.AppUsers)
                                {
                                    <option value="@item.ID">@item.UserName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.Payment.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


